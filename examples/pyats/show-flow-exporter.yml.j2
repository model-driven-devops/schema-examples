---
type: object
required:
  - flow_exporter_name
properties:
  flow_exporter_name:
    type: object
    required:
      - {{ check_vars.exporter_name }}
    properties:
      {{ check_vars.exporter_name }}:
        type: object
        required:
          - transport_config
        properties:
          transport_config:
            type: object
            required:
              - destination_ip_address
              - destination_port
              - transport_protocol
            properties:
              destination_ip_address:
                type: string
                const: {{ check_vars.destination_address }}
              destination_port:
                type: integer
                const: {{ check_vars.destination_port }}
              transport_protocol:
                type: string
                const: {{ check_vars.transport_protocol }}

